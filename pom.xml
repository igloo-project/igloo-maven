<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>org.iglooproject</groupId>
	<artifactId>igloo-maven</artifactId>
	<packaging>pom</packaging>
	<version>6.0.0-Alpha11</version>

	<name>Maven configuration for Igloo stack</name>
	<description>
		This module tree contains various maven-related configurations

		Tree is split between dependency (provided as managed BOM) and common
		managed plugin configurations.

		This module is a minimalist self-contained pom declaration with updated
		and curated common plugin
		configuration, and common repository information (scm, project page,
		...).

		Maven 3.8 is set as a prerequisite.

		This module is not installed nor published.
	</description>

	<modules>
		<module>plugins-common</module>
		<module>plugins-report</module>
		<module>plugins-enforcer</module>
		<module>plugins-npm</module>
		<module>plugins-processor</module>
		<module>plugins-jacoco</module>
		<module>plugins-all</module>

		<module>properties</module>

		<module>dependencies-commons</module>
		<module>dependencies-bindgen</module>
		<module>dependencies-logging</module>
		<module>dependencies-hibernate</module>
		<module>dependencies-hibernate-search</module>
		<module>dependencies-spring</module>
		<module>dependencies-wicket</module>
		<module>dependencies-bootstrap4</module>
		<module>dependencies-bootstrap5</module>
		<module>dependencies-jersey</module>
		<module>dependencies-testing</module>
		<module>dependencies-quality-annotations</module>
		<module>dependencies-html</module>
		<module>dependencies-tools</module>

		<module>igloo-dependency-rule</module>
	</modules>

	<properties>
		<!-- pure maven plugin configuration -->
		<minimal.maven.version>3.8.0</minimal.maven.version>
		<igloo.maven-clean-plugin.version>3.3.2</igloo.maven-clean-plugin.version>
		<igloo.maven-deploy-plugin.version>3.1.1</igloo.maven-deploy-plugin.version>
		<igloo.maven-install-plugin.version>3.1.1</igloo.maven-install-plugin.version>
		<igloo.maven-site-plugin.version>4.0.0-M12</igloo.maven-site-plugin.version>
		<igloo.maven-project-info-reports-plugin.version>3.5.0</igloo.maven-project-info-reports-plugin.version>
		<igloo.jgitflow-maven-plugin.version>1.0-m5.1</igloo.jgitflow-maven-plugin.version>
		<igloo.jsch.version>0.1.55</igloo.jsch.version>
		<igloo.owasp-maven-plugin.version>9.0.4</igloo.owasp-maven-plugin.version>
		<igloo.versions-maven-plugin.version>2.16.2</igloo.versions-maven-plugin.version>
		<igloo.maven-enforcer-plugin.version>3.4.1</igloo.maven-enforcer-plugin.version>
		<igloo.flatten-maven-plugin.version>1.5.0</igloo.flatten-maven-plugin.version>

		<igloo.bindgen.version>5.0.0</igloo.bindgen.version>
		<igloo.querydsl.version>5.0.0</igloo.querydsl.version>
		<igloo.immutables.version>2.10.0</igloo.immutables.version>

		<!-- very general project/java configurations -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<maven.compiler.release>17</maven.compiler.release>

		<masterBranchName>igloo-boot</masterBranchName>
		<!-- needed for wicket, bindgen, bindgen-*, commons-fileupload2 -->
		<allowSnapshots>true</allowSnapshots>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>external.atlassian.jgitflow</groupId>
				<artifactId>jgitflow-maven-plugin</artifactId>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-site-plugin</artifactId>
					<version>${igloo.maven-site-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-project-info-reports-plugin</artifactId>
					<version>${igloo.maven-project-info-reports-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.owasp</groupId>
					<artifactId>dependency-check-maven</artifactId>
					<version>${igloo.owasp-maven-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>versions-maven-plugin</artifactId>
					<version>${igloo.versions-maven-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-enforcer-plugin</artifactId>
					<version>${igloo.maven-enforcer-plugin.version}</version>
					<executions>
						<execution>
							<id>enforce-maven</id>
							<goals>
								<goal>enforce</goal>
							</goals>
							<configuration>
								<rules>
									<requireMavenVersion>
										<version>${minimal.maven.version}</version>
									</requireMavenVersion>
									<requireJavaVersion>
										<version>${maven.compiler.release}</version>
									</requireJavaVersion>
								</rules>
							</configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-clean-plugin</artifactId>
					<version>${igloo.maven-clean-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-deploy-plugin</artifactId>
					<version>${igloo.maven-deploy-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-install-plugin</artifactId>
					<version>${igloo.maven-install-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>flatten-maven-plugin</artifactId>
					<version>${igloo.flatten-maven-plugin.version}</version>
					<configuration>
						<outputDirectory>${project.build.directory}</outputDirectory>
					</configuration>
					<executions>
						<execution>
							<id>flatten</id>
							<phase>process-resources</phase>
							<goals>
								<goal>flatten</goal>
							</goals>
						</execution>
						<execution>
							<id>flatten.clean</id>
							<phase>clean</phase>
							<goals>
								<goal>clean</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>external.atlassian.jgitflow</groupId>
					<artifactId>jgitflow-maven-plugin</artifactId>
					<version>${igloo.jgitflow-maven-plugin.version}</version>
					<configuration>
						<autoVersionSubmodules>true</autoVersionSubmodules>
						<flowInitContext>
							<masterBranchName>${masterBranchName}</masterBranchName>
							<developBranchName>igloo-boot-dev</developBranchName>
							<featureBranchPrefix>igloo-boot-ft-</featureBranchPrefix>
							<releaseBranchPrefix>igloo-boot-rl-</releaseBranchPrefix>
							<hotfixBranchPrefix>igloo-boot-hf-</hotfixBranchPrefix>
							<versionTagPrefix>v</versionTagPrefix>
						</flowInitContext>
					</configuration>
					<dependencies>
						<dependency>
							<groupId>com.jcraft</groupId>
							<artifactId>jsch</artifactId>
							<version>${igloo.jsch.version}</version>
						</dependency>
					</dependencies>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

